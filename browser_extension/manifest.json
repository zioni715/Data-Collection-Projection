{
  "manifest_version": 3,
  "name": "Local Collector Tab Tracker",
  "version": "0.1.0",
  "description": "Send active tab info to the local collector (/events).",
  "permissions": ["tabs", "activeTab"],
  "host_permissions": ["http://127.0.0.1:8080/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Collector"
  }
}
