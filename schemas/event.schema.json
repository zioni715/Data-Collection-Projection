{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/event.schema.json",
  "title": "EventEnvelope",
  "type": "object",
  "required": [
    "schema_version",
    "event_id",
    "ts",
    "source",
    "app",
    "event_type",
    "priority",
    "resource",
    "payload",
    "privacy"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+$"
    },
    "event_id": {
      "type": "string",
      "format": "uuid"
    },
    "ts": {
      "type": "string",
      "format": "date-time"
    },
    "source": {
      "type": "string",
      "minLength": 1
    },
    "app": {
      "type": "string",
      "minLength": 1
    },
    "event_type": {
      "type": "string",
      "minLength": 1
    },
    "priority": {
      "type": "string",
      "enum": ["P0", "P1", "P2"]
    },
    "resource": {
      "type": "object",
      "required": ["type", "id"],
      "properties": {
        "type": {"type": "string"},
        "id": {"type": "string"}
      },
      "additionalProperties": true
    },
    "payload": {
      "type": "object",
      "additionalProperties": true
    },
    "privacy": {
      "type": "object",
      "required": ["pii_level", "redaction"],
      "properties": {
        "pii_level": {"type": "string"},
        "redaction": {
          "type": "array",
          "items": {"type": "string"}
        }
      },
      "additionalProperties": true
    },
    "pid": {
      "type": "integer"
    },
    "window_id": {
      "oneOf": [
        {"type": "string"},
        {"type": "integer"},
        {"type": "null"}
      ]
    }
  },
  "additionalProperties": true
}
